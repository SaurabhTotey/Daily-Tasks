<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="5dp">

	<!--TODO: the only difference between this and task.xml is that TaskTitle's width is 15dp less
	(15dp comes from the padding for displaying sub-tasks) so that the forms can line up: this is
	unsustainable and doesn't work for sub-sub-tasks or deeper nestings.
	Programmatic spacings should be used so that for each layer of sub-task, the title width is 15dp less-->

	<ImageButton
		android:id="@+id/ExpandSubTasksButton"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:contentDescription="@string/expand_sub_tasks_button_description"
		android:src="@android:drawable/arrow_down_float"
		android:background="@android:color/transparent"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/TaskTitle"
		android:layout_width="230dp"
		android:layout_height="25dp"
		android:gravity="center_vertical"
		android:textAppearance="@style/TextAppearance.AppCompat.Title"
		android:layout_toEndOf="@+id/ExpandSubTasksButton"/>

	<RelativeLayout
		android:layout_width="150dp"
		android:layout_height="25dp"
		android:layout_toEndOf="@id/TaskTitle">

		<TextView
			android:id="@+id/TaskFormDescription"
			android:layout_width="75dp"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true" />

		<FrameLayout
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_toStartOf="@+id/TaskFormDescription">

			<NumberPicker
				android:id="@+id/TaskNumberPicker"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:visibility="gone" />

			<CheckBox
				android:id="@+id/TaskCheckBox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:visibility="gone" />

		</FrameLayout>

	</RelativeLayout>

	<TextView
		android:id="@+id/TaskDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/TaskTitle"
		android:layout_toEndOf="@id/ExpandSubTasksButton"
		android:visibility="gone" />

	<LinearLayout
		android:id="@+id/SubTaskContainer"
		tools:ignore="RtlSymmetry"
		android:paddingStart="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/TaskDescription"
		android:orientation="vertical"
		android:visibility="gone" />

</RelativeLayout>
