<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="5dp"
	android:background="@color/taskCompletionIrrelevant">

	<ImageButton
		android:id="@+id/ExpandSubTasksButton"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:contentDescription="@string/expand_sub_tasks_button_description"
		android:src="@android:drawable/arrow_down_float"
		android:background="@android:color/transparent"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/TaskTitle"
		android:layout_width="215dp"
		android:layout_height="40dp"
		android:gravity="center_vertical"
		android:textAppearance="@style/TextAppearance.AppCompat.Title"
		android:layout_toEndOf="@+id/ExpandSubTasksButton" />

	<RelativeLayout
		android:layout_width="180dp"
		android:layout_height="40dp"
		android:layout_toEndOf="@id/TaskTitle">

		<TextView
			android:id="@+id/TaskFormDescription"
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:gravity="center_vertical"
			android:layout_alignParentEnd="true" />

		<FrameLayout
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:layout_toStartOf="@+id/TaskFormDescription">

			<EditText
				android:id="@+id/TaskNumberInput"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:autofillHints="no"
				android:hint="@string/form_number_input_hint"
				android:inputType="number"
				android:imeOptions="actionDone"
				android:layout_gravity="center"
				android:visibility="invisible" />

			<CheckBox
				android:id="@+id/TaskCheckBox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:visibility="invisible" />

		</FrameLayout>

	</RelativeLayout>

	<TextView
		android:id="@+id/TaskDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/TaskTitle"
		android:layout_toEndOf="@id/ExpandSubTasksButton"
		android:visibility="gone" />

	<LinearLayout
		android:id="@+id/SubTaskContainer"
		tools:ignore="RtlSymmetry"
		android:paddingStart="15dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/TaskDescription"
		android:orientation="vertical"
		android:visibility="gone" />

</RelativeLayout>
